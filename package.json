{
  "name": "remark-lint-no-dead-urls",
  "type": "module",
  "sideEffects": false,
  "version": "1.1.0",
  "description": "Ensure that URLs in your Markdown are alive",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidtheclark/remark-lint-no-dead-urls.git"
  },
  "keywords": [
    "remark",
    "remark-plugin",
    "lint",
    "markdown",
    "remark-lint"
  ],
  "author": "David Clark",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/davidtheclark/remark-lint-no-dead-urls/issues"
  },
  "homepage": "https://github.com/davidtheclark/remark-lint-no-dead-urls#readme",
  "dependencies": {
    "check-links": "^2.0.0",
    "is-online": "^10.0.0",
    "unified-lint-rule": "^2.0.0",
    "unist-util-visit": "^4.0.0"
  },
  "devDependencies": {
    "@types/mdast": "^3.0.0",
    "@types/node": "^18.0.0",
    "c8": "^7.0.0",
    "esmock": "^2.0.0",
    "prettier": "~2.7.0",
    "remark": "^14.0.0",
    "remark-cli": "^11.0.0",
    "remark-preset-wooorm": "^9.0.0",
    "rimraf": "^3.0.0",
    "type-coverage": "^2.0.0",
    "typescript": "~4.9.0",
    "xo": "^0.53.0"
  },
  "scripts": {
    "build": "rimraf \"*.d.ts\" && tsc && type-coverage",
    "format": "remark . -qfo --ignore-pattern test/ && prettier . -w --loglevel warn && xo --fix",
    "test-api": "node --loader=esmock test.js",
    "test-coverage": "c8 --check-coverage --branches 100 --functions 100 --lines 100 --statements 100 --reporter lcov npm run test-api",
    "test": "npm run build && npm run format && npm run test-coverage"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true,
    "ignoreCatch": true
  }
}
